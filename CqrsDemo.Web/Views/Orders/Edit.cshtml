@model OrderEditViewModel

<form asp-controller="Orders" asp-action="Edit" method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" /> <br />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input asp-for="Status" class="form-control" readonly/><br />
    </div>

    <div class="form-group">
        <label>Product</label>
        <input asp-for="Product.Name" class="form-control" readonly/><br />
    </div>
    <div class="form-group">
        <label>Positions</label>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var position in Model.Positions)
                {
                <tr>
                    <td>@position.Id</td>
                    <td>@position.Name</td>
                    <td>@position.Quantity</td>
                </tr>
                }
            </thead>
        </table>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit">Update</button>
</form>